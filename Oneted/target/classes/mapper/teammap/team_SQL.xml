<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team">

	<select id="searchTeamList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
			    team_board
			WHERE
				lower(tname) like '%'||#{search}||'%'
			ORDER BY
				tid desc
		]]>
	</select>
	
	<select id="searchProjectList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
			    project_board
			WHERE
				lower(pname) like '%'||#{search}||'%'
			ORDER BY
				pid desc
		]]>
	</select>
	
	<select id="selectTeamList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
			    team_board
			ORDER BY
				tid desc
		]]>
	</select>
	
	<select id="selectProjectList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
			    project_board
			ORDER BY
				pid desc
		]]>
	</select>
	
	<select id="selectTeamOne" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
			    team_board
			WHERE
				TID = #{IDX}
		]]>
	</select>
	
	<select id="selectProjectOne" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				*
			FROM
			    project_board
			WHERE
				PID = #{IDX2}
		]]>
	</select>
	
	<select id="myTeam" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT 
				* 
			FROM 
				TEAM_BOARD
			WHERE TID=(
				SELECT
				TID
			FROM
			    TEAM_INFO
			WHERE
				EMAIL = #{IDI} )
		]]>
	</select>
	
	<select id="myProject" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT 
				* 
			FROM 
				PROJECT_BOARD
			WHERE PID=(
				SELECT
				PID 
			FROM
			    PROJECT_INFO
			WHERE
				EMAIL = #{IDI} )
		]]>
	</select>
	
	<select id="selectProjectMember" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
			    *
			FROM
			    PROJECT_INFO
			WHERE
				 PID = #{IDX2}
		]]>
	</select>
	<select id="selectMemberInfo" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				MEMBER_NAME,
				MEMBER_EMAIL,
				MEMBER_IMG
			FROM
			    MEMBER
			WHERE
				MEMBER_EMAIL=#{SEARCH_MEMBER_EMAIL}
		]]>
	</select>
	<select id="selectTeamContact" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
			SELECT
				L_EMAIL,
			    TEAM_NAME,
			    TEAM_IMG
			FROM
			    TEAM
			WHERE
				TEAM_ID=#{IDX}
		]]>
	</select>
</mapper>